# MÓDULO DE CONSTANTES
CODIGO_ACCESO_ESPECIAL = "1234"

# funciones
def verificar_acceso(codigo_ingresado):
    
    return codigo_ingresado == CODIGO_ACCESO_ESPECIAL


def control_acceso_almacen():
    
    accesos_permitidos = 0
    accesos_denegados = 0
    registro_eventos = []

    print("---Control de Acceso a Zonas de Almacén ---")
    print(f"Código de Acceso Requerido: {CODIGO_ACCESO_ESPECIAL}")
    print("Ingrese 'SALIR' para salir.")

    # Bucles
    
    while True:
        codigo_empleado = input("\nIngrese código de identificación del empleado: ").strip().upper()

        if codigo_empleado == "SALIR":
            break
        acceso_concedido = verificar_acceso(codigo_empleado)
        if acceso_concedido:
            accesos_permitidos += 1
            mensaje = f"Registro de acceso exitoso para código: {codigo_empleado}."
            print("Acceso CONCEDIDO.")
        else:
            accesos_denegados += 1
            mensaje = f"Intento fallido de acceso con código: {codigo_empleado}."
            print("Acceso DENEGADO. Código no coincide.")
        
    
        registro_eventos.append(mensaje)

    
    mostrar_resultados(accesos_permitidos, accesos_denegados, registro_eventos)

#RESULTADOS

def mostrar_resultados(permitidos, denegados, registro):
    print("\n--- RESUMEN DE LA JORNADA ---")
    print(f"Contador de Accesos Permitidos: {permitidos}")
    print(f"Contador de Accesos Denegados: {denegados}")
    print(f"Total de Intentos Procesados: {permitidos + denegados}")

    print("\n--- REGISTRO DETALLADO DE EVENTOS ---")
    if registro:
        for evento in registro:
            print(f"- {evento}")
    else:
        print("No se registraron intentos de acceso.")
    print("-----------------------------------")


# Codigo principal
if __name__ == "__main__":
    control_acceso_almacen()
