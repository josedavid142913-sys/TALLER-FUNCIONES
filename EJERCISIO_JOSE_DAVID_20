# PROGRAMA PARA COMBERTIR DE LITROS A GALONES

def tomar_datos():
   litros = float(input("ingrese litros"))
   return litros

def procesar(litros):
    galones = litros * 2.54
    return galones

def mostrar(galones):
    print("en galones es:", galones)

# CODIGO PRINCIPAL

litros = tomar_datos()  
galones = procesar(litros)
mostrar(litros)
