# PROGRAMA PARA HALLAR EL AREA DE UN PARALELOGRAMO

def tomar_datos():
    base = float(input("Ingrese la base: "))
    altura = float(input("Ingrese la altura: "))
    return base, altura
def procesar(base, altura):
    area = base * altura
    return area
def mostrar(area):
    
    #  IMPRIMIR RESULTADO
    
    print(f"El Ã¡rea del paralelogramo es: {area}")
    print("\n" + "="*50)
    print("="*50)
    
  # CODIGO PRINCIPAL
  
base, altura = tomar_datos()
area = procesar(base, altura)
mostrar(area)
